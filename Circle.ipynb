    "from math import pi\n",
    "\n",
    "class Circle:\n",
    "    def __init__(self, rad):\n",
    "        self.rad = rad\n",
    "\n",
    "    def area(self):\n",
    "        return pi * (self.rad ** 2)"
   ]
